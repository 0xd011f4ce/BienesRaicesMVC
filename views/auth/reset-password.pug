extends ../layouts/index

block content
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl= page

        if errors 
            div.max-w-md.mx-auto.my-10
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-4(method="POST")
                    input(type="hidden" name="_csrf" value=csrfToken)
                
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded.placeholder-gray-400(placeholder="Password" type="password" name="password")

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password2") Confirm password
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded.placeholder-gray-400(placeholder="Confirm your password" type="password" name="password2")

                    input(type="submit" value="Reset Password" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer rounded")